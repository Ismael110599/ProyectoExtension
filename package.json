{
  "name": "ai-mechanic",
  "displayName": "Ai-mechanic",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-mechanic.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "ai-mechanic.openExampleValidator",
        "title": "Abrir Validador de Ejemplos"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiMechanic",
          "title": "AI Mechanic",
          "icon": "./media/tutor.svg"
        }
      ]
    },
    "views": {
      "aiMechanic": [
        {
          "type": "webview",
          "id": "ai-mechanic.tutorView",
          "name": "Tutor Python"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "mocha out/test/simpleApi.test.js"
  },
  
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^4.5.0",
    "eslint": "^9.25.1",
    "mocha": "^11.7.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "dotenv": "^17.2.1"
  }
}
